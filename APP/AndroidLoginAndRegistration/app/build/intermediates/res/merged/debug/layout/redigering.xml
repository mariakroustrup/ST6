<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="MedlemsID:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/medlemsid"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Navn:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/navn"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Kategorisering:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/kategorisering"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="0.20"
        android:text="Adgangskoden skal minimum vÃ¦re 10 karakterer"
        android:textSize="15dp" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Indtast ny adganskode:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/adgangskode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Gentag ny adganskode:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/genadgangskode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnNyAdgangskode"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Gem adgangskode" />



</LinearLayout>