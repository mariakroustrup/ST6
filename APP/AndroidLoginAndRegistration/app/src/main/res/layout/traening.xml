<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popUp_position">


    <TextView
        android:id="@+id/Traening"
        android:layout_marginTop="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Træning"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Tid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Tid:"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/Timer"
        android:layout_alignBottom="@+id/Timer"
        android:layout_alignLeft="@+id/afstand"
        android:layout_alignStart="@+id/afstand" />

    <TextView
        android:id="@+id/Timer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="1:20:00"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_above="@+id/afstand"
        android:layout_toRightOf="@+id/afstand"
        android:layout_toEndOf="@+id/afstand" />

    <TextView
        android:id="@+id/afstand"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Afstand:"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="86dp"
        android:layout_marginStart="86dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/km"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="0.0 km"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/Timer"
        android:layout_toRightOf="@+id/afstand"
        android:layout_toEndOf="@+id/afstand" />


    <Button
        android:id="@+id/start"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Start træning"
        android:layout_marginTop="69dp"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_below="@+id/afstand"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/stop"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Stop træning"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_below="@+id/start"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start" />

    <TextView
        android:id="@+id/kondistyrkevejr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konditionstræning"
        android:textSize="20dp"
        android:layout_below="@+id/Traening"
        android:layout_alignRight="@+id/Traening"
        android:layout_alignEnd="@+id/Traening"
        android:layout_marginTop="17dp" />


</RelativeLayout>