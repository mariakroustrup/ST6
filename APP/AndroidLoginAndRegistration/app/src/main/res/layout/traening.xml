<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popUp_position">


    <TextView
        android:id="@+id/Traening"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Træning"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/Tid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Tid:"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Traening"
        android:layout_alignLeft="@+id/Traening"
        android:layout_alignStart="@+id/Traening" />

    <TextView
        android:id="@+id/Timer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="00:00:00"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_above="@+id/afstand"
        android:layout_alignRight="@+id/km"
        android:layout_alignEnd="@+id/km" />

    <TextView
        android:id="@+id/afstand"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Afstand:"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/Tid"
        android:layout_alignLeft="@+id/Tid"
        android:layout_alignStart="@+id/Tid" />

    <TextView
        android:id="@+id/km"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="0.0 km"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_above="@+id/puls"
        android:layout_toRightOf="@+id/afstand"
        android:layout_toEndOf="@+id/afstand"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/puls"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Puls:"
        android:textSize="25dp"
        android:layout_below="@+id/afstand"
        android:layout_alignLeft="@+id/afstand"
        android:layout_alignStart="@+id/afstand"
        android:layout_marginTop="17dp" />


    <TextView
        android:id="@+id/bpm"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="00 bpm"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/afstand"
        android:layout_toRightOf="@+id/puls"
        android:layout_toEndOf="@+id/puls"
        android:layout_marginTop="17dp"/>

    <Button
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Start træning"
        android:layout_below="@+id/puls"
        android:layout_alignLeft="@+id/puls"
        android:layout_alignStart="@+id/puls"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_alignRight="@+id/stop"
        android:layout_alignEnd="@+id/stop"
        android:visibility="visible"/>

    <Button
        android:id="@+id/stop"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Stop træning"
        android:layout_gravity="center"
        android:layout_below="@+id/start"
        android:layout_alignLeft="@+id/puls"
        android:layout_alignStart="@+id/puls"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_alignRight="@+id/bpm"
        android:layout_alignEnd="@+id/bpm"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/kondistyrkevejr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konditionstræning"
        android:layout_below="@+id/Traening"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>


</RelativeLayout>