<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textHelbred1"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:text="Godt arbejde!
Du bedes evaluere din
træning, således et
træningsniveau kan tilpasses
din næste træning"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textHelbred2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Hvordan oplevede du træningen i dag?"
        android:textAlignment="center"
        android:layout_below="@+id/textHelbred1"
        android:textSize="18sp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/smiley_Middel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.5"
        android:src="@drawable/smiley_1"
        android:layout_below="@+id/textHelbred2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="ButtonOnClickMiddel"/>

    <ImageView
        android:id="@+id/smiley_glad"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:src="@drawable/smiley_2"
        android:onClick="ButtonOnClickGlad"
        android:layout_alignTop="@+id/smiley_Middel"
        android:layout_toRightOf="@+id/smiley_Middel"
        android:layout_toEndOf="@+id/smiley_Middel" />


    <ImageView
        android:id="@+id/smiley_Sur"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:src="@drawable/smiley_3"
        android:onClick="ButtonOnClickSur"
        android:layout_alignTop="@+id/smiley_Middel"
        android:layout_toLeftOf="@+id/smiley_Middel"
        android:layout_toStartOf="@+id/smiley_Middel" />
    <Button
        android:id="@+id/Videreeval"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:text="Videre"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

</RelativeLayout>