                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity" android:launchMode="singleTop" />
        <activity android:name=".activity.RedigeringController" android:launchMode="singleTop"/>
        <activity android:name=".activity.MENU"></activity>
        <activity android:name=".activity.LOGUD"></activity>
        <activity android:name=".activity.REDIGERING"></activity>
        <activity android:name=".activity.RESULTATER"></activity>
        <activity android:name=".activity.TILPASNING"></activity>
