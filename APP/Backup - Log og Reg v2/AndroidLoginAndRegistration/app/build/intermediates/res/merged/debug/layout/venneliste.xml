<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Indtast medlemsID på ny ven:"
        android:textAlignment="center"
        android:textSize="16sp"
        android:id="@+id/textView2"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/PersonName"
        android:layout_toLeftOf="@+id/soeg"
        android:layout_toStartOf="@+id/soeg" />


    <EditText
        android:id="@+id/PersonName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/soeg"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/soeg" />


    <Button
        android:id="@+id/soeg"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Søg"
        android:onClick="ButtonOnClick"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/venneliste"
        android:layout_alignRight="@+id/venneliste"
        android:layout_alignEnd="@+id/venneliste" />

    <ListView
        android:id="@+id/venneliste"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:listSelector="@android:color/holo_blue_light"
        android:layout_marginBottom="9dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Venneliste1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:layout_weight="0.00"
        android:text="Venneliste"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>